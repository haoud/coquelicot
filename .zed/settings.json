{
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "cargo": {
                    "target": "x86_64-unknown-none"
                },
                "check": {
                    "allTargets": false,
                    "command": "clippy"
                },
                "procMacro": {
                    "attribute": {
                        "enable": true
                    },
                    "enable": true
                }
            }
        }
    }
}
